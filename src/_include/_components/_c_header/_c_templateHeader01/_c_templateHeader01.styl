header.c-templateHeader01
	position fixed
	top 0
	left 0
	width 100%
	box-sizing border-box
	z-index 9000
	transition-property all
	transition-duration 0.3s
	transition-timing-function ease
	&:hover
		background-color rgba(255,255,255,0.95)
		box-shadow 0px 0px 6px rgba(0,0,0,0.3)

	+MQ_MAX(PC_RES_WID01)
		padding pSet(30) 0
	+MQ_MIN(PC_RES_WID01)
		padding 30px 0

	$primaryGroup
		display flex
		justify-content space-between

	$logoBlock
		// fontSize(16)
		letter-spacing 0.2em
		vwFontSet(16)
	
	$navBlock
		ul
			display flex
			flex-wrap wrap
		li
			margin-right 1.5em
			vwFontSet(12)
			&:last-child
				margin-right 0
		a
			color inherit
			text-decoration none

	&>.l-contentsWidth
		&>.group
			&.is-primary
				@extend $primaryGroup
			&>.block
				&.is-logo
					@extend $logoBlock
				&.is-nav
					@extend $navBlock